<Window x:Class="Assistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Assistant.Wpf.View"        
        xmlns:vm="clr-namespace:Assistant.Wpf.ViewModel"        
        mc:Ignorable="d"
        Title="MainWindow"         
        Height="900"
        Width="300"
        Top="40"
        Left="3500"
        AllowsTransparency="True" 
        Background="{x:Null}"
        Foreground="White"
        WindowStyle="None">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <StackPanel Orientation="Vertical">
        <v:Clock/>
        <TextBlock>Weather</TextBlock>
        <TextBlock>Calendar</TextBlock>
        <TextBlock>Disk info1</TextBlock>
        <TextBlock>Disk info2</TextBlock>
        <TextBlock>Disk info3</TextBlock>
        
        <ComboBox
            Width="300"
            ItemsSource="{Binding Screens}"
            DisplayMemberPath="DeviceName"
            SelectedValue="{Binding SelectedScreen, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>

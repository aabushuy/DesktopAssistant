<UserControl x:Class="Assistant.Wpf.View.Weather"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assistant.Wpf.View"
             xmlns:vm="clr-namespace:Assistant.Wpf.ViewModel"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:WeatherViewModel/>
    </UserControl.DataContext>

    <Border CornerRadius="{StaticResource BarCornerRadius}"
            Background="{StaticResource CommonBackgroundBrush}">
        <StackPanel Margin="0 5">

            <StackPanel
                Margin="0 5 0 0">
                <ItemsControl ItemsSource="{Binding Hourly}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                CornerRadius="10"
                                Background="{StaticResource CommonBackgroundBrushLight}"
                                Margin="5 0">   
                                <Grid Margin="5 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock
                        Grid.Row="0"
                        Text="{Binding DT, StringFormat={}{0:HH:mm}}"
                        FontSize="10"
                        HorizontalAlignment="Center"
                        Margin="5"/>
                                    <TextBlock
                        Grid.Row="1"
                        Text="{Binding Temperature, StringFormat={}{0:0}°C}"
                        FontSize="16"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"/>
                                    <TextBlock
                        Grid.Row="2"
                        Text="{Binding Pop, StringFormat={}{0:0}%}"
                        FontSize="8"
                        HorizontalAlignment="Center"
                        Margin="5"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <StackPanel
                Margin="0 5 0 0">
                <ItemsControl ItemsSource="{Binding Daily}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                CornerRadius="10"
                                Background="{StaticResource CommonBackgroundBrushLight}"
                                Margin="5 0">   
                                <Grid Margin="5 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock
                                        Grid.Row="0"
                                        Text="{Binding DT, StringFormat={}{0:ddd}}"
                                        FontSize="10"
                                        HorizontalAlignment="Center"
                                        Margin="5"/>
                                     
                                    <TextBlock
                                        Grid.Row="1"
                                        Text="{Binding Temperature, StringFormat={}{0:0}°C}"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Center"/>

                                    <TextBlock
                                        Grid.Row="2"
                                        Text="{Binding Temperature2, StringFormat={}{0:0}°C}"
                                        FontSize="12"
                                        HorizontalAlignment="Center"/>

                                    <TextBlock
                                        Grid.Row="3"
                                        Text="{Binding Pop, StringFormat={}{0:0}%}"
                                        FontSize="8"
                                        HorizontalAlignment="Center"
                                        Margin="5"/>
                                </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            <StackPanel
                Margin="0 5 0 0">
                <ItemsControl ItemsSource="{Binding Alerts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel 
                                Orientation="Vertical" 
                                HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding HoursLeft, StringFormat={}{0}h}"
                                           HorizontalAlignment="Center"
                                           MinWidth="30"
                                           Margin="5 0"/>

                                    <TextBlock Text="{Binding SummaryDescription}"
                                           MaxWidth="210"
                                           HorizontalAlignment="Center"
                                           TextWrapping="WrapWithOverflow"
                                           Margin="5 0"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

<Application x:Class="Assistant.WpfApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Assistant.WpfApp"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="Azure" />
        <SolidColorBrush x:Key="SecondatyBrush" Color="Silver" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="Black" Opacity="0.5"/>

        <Style x:Key="CommonWindowStyle" TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="WindowStyle" Value="None"/>
        </Style>
    </Application.Resources>
</Application>
